{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "build",
    "jsx": "react",
    "typeRoots": [ "node_modules/@types/", "type-declarations/" ],
    "types": [ "react", "react-dom", "mocha", "chai", "sinon"]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}